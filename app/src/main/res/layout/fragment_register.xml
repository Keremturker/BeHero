<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.login.LoginFragment">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/logo_red"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="8dp">


            <com.keremturker.behero.commons.CustomEdittext
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toTopOf="parent"
                app:leftImage="@drawable/ic_user_red" />

            <com.keremturker.behero.commons.CustomEdittext
                android:id="@+id/edtMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textNoSuggestions|textVisiblePassword"
                app:layout_constraintTop_toBottomOf="@id/edtName"
                app:leftImage="@drawable/ic_mail" />

            <com.keremturker.behero.commons.CustomEdittext
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textNoSuggestions|textVisiblePassword"
                app:layout_constraintTop_toBottomOf="@id/edtMail"
                app:leftImage="@drawable/ic_password" />

            <com.keremturker.behero.commons.CustomEdittext
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textNoSuggestions|textVisiblePassword"
                app:layout_constraintTop_toBottomOf="@id/edtPassword"
                app:leftImage="@drawable/ic_phone" />

            <com.keremturker.behero.commons.CustomEdittext
                android:id="@+id/edtBlood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textNoSuggestions|textVisiblePassword"
                app:layout_constraintTop_toBottomOf="@id/edtPhone"
                app:leftImage="@drawable/ic_blood" />

            <com.keremturker.behero.commons.CustomEdittext
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:inputType="textNoSuggestions|textVisiblePassword"
                app:layout_constraintTop_toBottomOf="@id/edtBlood"
                app:leftImage="@drawable/ic_location" />


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/button_radius_bg"
                android:text="@string/register_button_text"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/edtAddress" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/btnRegister" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>